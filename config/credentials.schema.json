{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/estsauver/demo-creator/config/credentials.schema.json",
  "title": "Demo Creator Credentials",
  "description": "Schema for ~/.claude/demo-credentials.yaml",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "description": "Schema version",
      "const": 1
    },
    "elevenlabs": {
      "type": "object",
      "description": "ElevenLabs TTS configuration",
      "properties": {
        "api_key": {
          "type": "string",
          "description": "ElevenLabs API key",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "default_voice_id": {
          "type": "string",
          "description": "Default voice ID to use"
        }
      },
      "required": ["api_key"]
    },
    "heygen": {
      "type": "object",
      "description": "HeyGen avatar configuration",
      "properties": {
        "api_key": {
          "type": "string",
          "description": "HeyGen API key"
        },
        "default_avatar_id": {
          "type": "string",
          "description": "Default avatar ID to use"
        }
      },
      "required": ["api_key"]
    },
    "gcs": {
      "type": "object",
      "description": "Google Cloud Storage configuration",
      "properties": {
        "credentials_path": {
          "type": "string",
          "description": "Path to GCS service account JSON key"
        },
        "default_bucket": {
          "type": "string",
          "description": "Default GCS bucket for uploads"
        }
      }
    },
    "anthropic": {
      "type": "object",
      "description": "Anthropic API configuration for visual validation",
      "properties": {
        "api_key": {
          "type": "string",
          "description": "Anthropic API key",
          "pattern": "^sk-ant-[a-zA-Z0-9-]+$"
        }
      },
      "required": ["api_key"]
    },
    "slack": {
      "type": "object",
      "description": "Slack integration configuration",
      "properties": {
        "default_webhook_url": {
          "type": "string",
          "description": "Default Slack webhook URL",
          "format": "uri"
        }
      }
    },
    "linear": {
      "type": "object",
      "description": "Linear integration configuration",
      "properties": {
        "api_key": {
          "type": "string",
          "description": "Linear API key",
          "pattern": "^lin_[a-zA-Z0-9]+$"
        }
      },
      "required": ["api_key"]
    },
    "github": {
      "type": "object",
      "description": "GitHub integration configuration",
      "properties": {
        "token": {
          "type": "string",
          "description": "GitHub personal access token",
          "pattern": "^(ghp_|github_pat_)[a-zA-Z0-9_]+$"
        }
      },
      "required": ["token"]
    }
  },
  "required": ["version", "elevenlabs"]
}
